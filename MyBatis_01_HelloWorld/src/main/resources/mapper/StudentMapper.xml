<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lencho.mybatis.dao.StudentMapper">

    <resultMap id="BaseResultMap" type="com.lencho.mybatis.entites.Student">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <id column="name" property="name" jdbcType="VARCHAR"/>
        <id column="age" property="age" jdbcType="INTEGER"/>
        <id column="no" property="no" jdbcType="INTEGER"/>
    </resultMap>

    <select id="queryAll" resultType="java.util.Map">
        select *
        from student;
    </select>

    <!-- 查询1 -->
    <select id="selectForPage1" resultType="com.lencho.mybatis.entites.Student">
        select *
        from student limit #{param1},#{param2}
    </select>
    <!-- 查询2-->
    <select id="selectForPage2" resultType="com.lencho.mybatis.entites.Student">
        select *
        from student limit #{startIndex},#{pageSize}
    </select>
    <!-- 查询总条数-->
    <select id="selectCount" resultType="java.lang.Integer">
        select count(*)
        from student
    </select>

    <!-- 查询5-->
    <select id="selectForPage4" resultType="com.lencho.mybatis.entites.Student">
        select *
        from student
        where name like "%"#{param3}"%"
            limit #{param1}
            , #{param2}
    </select>
    <!-- 模糊查询查询总条数-->
    <select id="selectCount2" resultType="java.lang.Integer" parameterType="java.lang.String">
        select count(*)
        from student
        where name like "%"#{value}"%"
    </select>
</mapper>

